{
  "name": "wasmd-indexer",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "lint": "eslint .",
    "format": "eslint . --fix",
    "prebuild": "rm -rf dist",
    "build": "tsc && tsc-alias",
    "build:watch": "concurrently --raw \"tsc -w\" \"tsc-alias -w\"",
    "db:setup": "node dist/db/setup.js",
    "db:alter": "node dist/db/alter.js",
    "clear-cache": "node dist/scripts/clearCache.js",
    "export": "node dist/scripts/export.js",
    "export:prod": "npm run build && pm2 reload ecosystem.config.js --only exporter",
    "transform": "node dist/scripts/transform.js",
    "serve": "node dist/server/index.js",
    "serve:dev": "nodemon --watch dist --signal SIGTERM --exec \"node dist/server/index.js\"",
    "serve:dev:testnet": "nodemon --watch dist --signal SIGTERM --exec \"node dist/server/index.js -c config.testnet.json\"",
    "serve:dev:mainnet": "nodemon --watch dist --signal SIGTERM --exec \"node dist/server/index.js -c config.mainnet.json\"",
    "serve:prod": "npm run build && pm2 reload ecosystem.config.js --only server_testnet,server_mainnet",
    "deploy:server": "./scripts/deploy_server.sh",
    "deploy:exporter": "./scripts/deploy_exporter.sh",
    "search:update": "node dist/meilisearch/runUpdate.js"
  },
  "author": "Noah Saso <noah@noah.zone>",
  "devDependencies": {
    "@types/koa": "^2.13.5",
    "@types/node": "^18.11.10",
    "@types/prettier": "^2.7.1",
    "@types/uuid": "^9.0.0",
    "@types/validator": "^13.7.10",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "concurrently": "^7.6.0",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-unused-imports": "^2.0.0",
    "nodemon": "^2.0.20",
    "pm2": "^5.2.2",
    "prettier": "^2.8.0",
    "sequelize-cli": "^6.5.2",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.2",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "@koa/cors": "^4.0.0",
    "@koa/router": "^12.0.0",
    "@types/koa__cors": "^3.3.0",
    "@types/koa__router": "^12.0.0",
    "axios": "^1.2.1",
    "commander": "^9.4.1",
    "koa": "^2.13.4",
    "meilisearch": "^0.30.0",
    "pg": "^8.8.0",
    "pg-hstore": "^2.3.4",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.26.0",
    "sequelize-typescript": "^2.1.5",
    "uuid": "^9.0.0"
  }
}
